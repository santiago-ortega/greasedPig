set vmname [lindex $argv 0];
set password [lindex $argv 1];
set cfc_log [lindex $argv 2];
set timeout 20

log_file $cfc_log

spawn virsh console $vmname
expect "Escape character is ^]"
sleep 10
send "\r"
sleep 10

expect "Please unlock disk vda5_crypt:"
send "$password\r";
sleep 5

send "\x1b\r"

log_file
